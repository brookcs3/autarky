{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es6",
    "strict": false,
    "lib": ["es6", "es2017"],
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"]
}
